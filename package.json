{
  "name": "graphql-api-koa",
  "version": "0.1.0",
  "description": "Koa middleware for a GraphQL API.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaydenseric/graphql-api-koa.git"
  },
  "homepage": "https://github.com/jaydenseric/graphql-api-koa#readme",
  "bugs": "https://github.com/jaydenseric/graphql-api-koa/issues",
  "keywords": [
    "graphql",
    "api",
    "koa"
  ],
  "files": [
    "lib",
    "!lib/test.*"
  ],
  "main": "lib",
  "module": "lib/index.mjs",
  "engines": {
    "node": ">=8.6"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.47",
    "@babel/core": "^7.0.0-beta.47",
    "@babel/preset-env": "^7.0.0-beta.47",
    "cross-env": "^5.1.4",
    "documentation": "^6.3.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.5.0",
    "graphql": "^0.13.2",
    "husky": "^0.14.3",
    "koa": "^2.5.1",
    "lint-staged": "^7.0.5",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "size-limit": "^0.18.0",
    "tap-difflet": "^0.7.1",
    "watch": "^1.0.2",
    "zora": "^2.0.1"
  },
  "scripts": {
    "lint": "cross-env FORCE_COLOR=1 run-p lint:* -c --aggregate-output",
    "lint:eslint": "eslint . --ext mjs,js",
    "lint:prettier": "prettier '**/*.{json,md}' -l",
    "lint:jsdoc": "documentation lint src",
    "prebuild": "rimraf lib",
    "build": "cross-env FORCE_COLOR=1 run-p build:* -c --aggregate-output",
    "build:mjs": "cross-env BABEL_ESM=1 babel src -d lib --keep-file-extension",
    "build:js": "babel src -d lib",
    "build:jsdoc": "documentation readme src -s API -c documentation.json --sort-order alpha -q",
    "postbuild": "prettier 'lib/**/*.{mjs,js}' readme.md --write",
    "pretest": "npm run build",
    "test": "cross-env FORCE_COLOR=1 run-p test:* -c --aggregate-output",
    "test:lint": "npm run lint",
    "test:size": "size-limit",
    "test:mjs": "node --experimental-modules --no-warnings lib/test | tap-difflet -p",
    "test:js": "node lib/test | tap-difflet -p",
    "watch": "watch 'npm test --silent' src --interval=1",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run test"
  },
  "lint-staged": {
    "*.{mjs,js}": "eslint",
    "*.{json,md}": "prettier -l"
  },
  "eslintIgnore": [
    "lib"
  ],
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "script",
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "node": true
    },
    "plugins": [
      "import",
      "node",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:node/recommended",
      "prettier"
    ],
    "rules": {
      "require-jsdoc": "warn",
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false
        }
      ],
      "require-await": "error",
      "no-return-await": "error",
      "arrow-body-style": "error",
      "prefer-arrow-callback": "error",
      "curly": [
        "error",
        "multi"
      ],
      "prefer-destructuring": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-useless-path-segments": "error",
      "import/order": "error",
      "node/no-unsupported-features": "error",
      "prettier/prettier": "error"
    },
    "overrides": [
      {
        "files": [
          "*.mjs"
        ],
        "parserOptions": {
          "sourceType": "module"
        },
        "rules": {
          "node/no-unsupported-features": [
            "error",
            {
              "ignores": [
                "modules"
              ]
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "semi": false
  },
  "size-limit": [
    {
      "name": "CJS",
      "path": "lib/index.js",
      "limit": "4 KB"
    },
    {
      "name": "ESM",
      "path": "lib/index.mjs",
      "limit": "4 KB"
    }
  ]
}
